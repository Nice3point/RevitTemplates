{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nice3point",
  "name": "Revit AddIn Solution",
  "shortName": "revit-addin-sln",
  "identity": "Nice3point.Revit.AddIn.Solution",
  "defaultName": "RevitAddIn",
  "sourceName": "Nice3point.Revit.AddIn",
  "description": "Template for creating a solution structure for Revit add-ins",
  "classifications": [
    "Revit",
    "AddIn",
    "Solution"
  ],
  "tags": {
    "type": "solution",
    "language": "C#",
    "platform": ".NET"
  },
  "placeholderFilename": "keep.folder",
  "guids": [
    "AAAAAAAA-AAAA-AAAA-AAAA-AAAAAAAAAAAA",
    "BBBBBBBB-BBBB-BBBB-BBBB-BBBBBBBBBBBB"
  ],
  "symbols": {
    "pipeline": {
      "type": "parameter",
      "displayName": "Pipeline",
      "description": "Adds support for CI/CD pipeline to your project",
      "datatype": "choice",
      "choices": [
        {
          "choice": "None",
          "displayName": "None",
          "description": "Pipeline not used"
        },
        {
          "choice": "Azure",
          "displayName": "Azure DevOps",
          "description": "Azure DevOps pipeline"
        },
        {
          "choice": "GitHub",
          "displayName": "GitHub Actions",
          "description": "GitHub Actions pipeline"
        }
      ],
      "defaultValue": "GitHub"
    },
    "installer": {
      "type": "parameter",
      "displayName": "Installer support",
      "dataType": "bool",
      "description": "Creates a project installer",
      "defaultValue": "true"
    },
    "bundle": {
      "type": "parameter",
      "displayName": "Bundle support",
      "dataType": "bool",
      "description": "Packs project files into a bundle. Used for uploading to Autodesk Store",
      "defaultValue": "false"
    },
    "NoPipeline": {
      "type": "computed",
      "value": "pipeline == \"None\""
    },
    "AzurePipeline": {
      "type": "computed",
      "value": "pipeline == \"Azure\""
    },
    "GitHubPipeline": {
      "type": "computed",
      "value": "pipeline == \"GitHub\""
    },
    "HasArtifacts": {
      "type": "computed",
      "value": "bundle || installer"
    },
    "ReleasePipeline": {
      "type": "computed",
      "value": "GitHubPipeline || AzurePipeline"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "!AzurePipeline || !HasArtifacts",
          "exclude": [
            "azure-pipelines.yml"
          ]
        },
        {
          "condition": "!GitHubPipeline",
          "exclude": [
            ".github/**",
            "Changelog.md",
            "build/Modules/GenerateChangelogModule.cs",
            "build/Modules/GenerateGitHubChangelogModule.cs",
            "build/Modules/PublishGithubModule.cs",
            "build/Options/PublishOptions.cs"
          ]
        },
        {
          "condition": "GitHubPipeline && !HasArtifacts",
          "exclude": [
            ".github/workflows/PublishRelease.yml",
            "Changelog.md",
            "build/Modules/GenerateChangelogModule.cs",
            "build/Modules/GenerateGitHubChangelogModule.cs",
            "build/Modules/PublishGithubModule.cs",
            "build/Options/PublishOptions.cs"
          ]
        },
        {
          "condition": "!installer",
          "exclude": [
            "install/**",
            "build/Modules/CreateInstallersModule.cs"
          ]
        },
        {
          "condition": "!bundle",
          "exclude": [
            "build/Modules/CreateBundleModule.cs",
            "build/Options/BuildOptions.cs"
          ]
        }
      ]
    }
  ],
  "SpecialCustomOperations": {
    "Readme.md": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "---#if"
            ],
            "else": [
              "---#else"
            ],
            "elseif": [
              "---#elseif"
            ],
            "endif": [
              "---#endif"
            ],
            "trim": "true",
            "wholeLine": "true"
          }
        }
      ]
    },
    "*.slnx": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "---#if"
            ],
            "else": [
              "---#else"
            ],
            "elseif": [
              "---#elseif"
            ],
            "endif": [
              "---#endif"
            ],
            "trim": "true",
            "wholeLine": "true"
          }
        }
      ]
    },
    "*.json": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "---#if"
            ],
            "else": [
              "---#else"
            ],
            "elseif": [
              "---#elseif"
            ],
            "endif": [
              "---#endif"
            ],
            "trim": "false",
            "wholeLine": "false"
          }
        }
      ]
    }
  }
}
